}
\def\mhchem@ce@dashtwo#1#2\mhchem@END{%
  \if\noexpand#1>%
    {}\ifx \mhchem@END#2\mhchem@END\mhchem@mesomeric#2%
    \else\mhchem@ce@deploycommand{mhchem@mesomeric}#2\mhchem@END\fi{}%
